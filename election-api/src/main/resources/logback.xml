<configuration>
    <!-- see http://logback.qos.ch/manual/configuration.html#LevelChangePropagator; this is for the jul bridge -->
    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd/MMM/yy HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="ba.zastone" level="DEBUG" additivity="FALSE">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="spray" level="DEBUG" additivity="TRUE">
        <appender-ref std="STDOUT"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
